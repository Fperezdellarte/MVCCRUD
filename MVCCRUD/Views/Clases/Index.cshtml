@model List<MVCCRUD.DTO.ClaseDTO>

<h1 class="text-white">Clases</h1>
<p>
	<a class="btn btn-info text-white" asp-action="Create">Crear nueva clase</a>

</p >
<table class="table">
	<thead>
		<tr>
			<th class="text-white">Nombre</th>
			<th class="text-white">Profesor</th>
			<th class="text-white">DiaClase</th>
			<th class="text-white">Opciones administrador</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="text-white">
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td class ="text-white">
					@Html.DisplayFor(modelItem => item.Profesor)
				</td>
				<td class="text-white">
					@Html.DisplayFor(modelItem => item.DiaClase)
				</td>
				<td>
					<a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar</a>
					<a asp-action="Delete" class="btn btn-dark" asp-route-id="@item.Id">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>