@model MVCCRUD.DTO.ClaseDTO

<h1>Crear Clase</h1>
<form asp-action="Create">
	<div class="form-group">
		<label asp-for="Nombre" class="control-label"></label>
		<input asp-for="Nombre" class="for-control">
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Profesor" class="control-label"></label>
		<input asp-for="Profesor" class="for-control">
		<span asp-validation-for="Profesor" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="DiaClase" class="control-label"></label>
		<input asp-for="DiaClase" type="date">
		<span asp-validation-for="DiaClase" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-primary">
	</div>
</form>